# Environment variables template for BA Copilot AI Services
# Copy this file to .env and fill in your values

# Basic app settings
APP_NAME="BA Copilot AI Services"
ENVIRONMENT=development
DEBUG=true

# Server settings
HOST=0.0.0.0
PORT=8000

# CORS settings (comma-separated)
ALLOWED_ORIGINS="*"

# Mock data settings
MOCK_DATA_ENABLED=true

# Logging
LOG_LEVEL=DEBUG

# Database connection (overridden by compose, but useful defaults for docker network)
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/bacopilot_db

# Redis settings (optional)
REDIS_URL=redis://redis:6379/0

# API Keys (for future use)
# GOOGLE_AI_API_KEY=your-google-ai-api-key-here
# CLAUDE_API_KEY=your-claude-api-key-here

# Security (for future use)
# SECRET_KEY=your-secret-key-here