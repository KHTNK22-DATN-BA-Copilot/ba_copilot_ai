# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://bacopilot_user:secure_password@localhost:5432/bacopilot_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bacopilot_db
DB_USER=bacopilot_user
DB_PASSWORD=secure_password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Security Configuration
SECRET_KEY=your-super-secret-jwt-signing-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=30

# AI/LLM Provider Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000

CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-3-sonnet-20240229

# Local LLM Configuration (Optional)
LOCAL_LLM_ENABLED=false
LOCAL_LLM_MODEL_PATH=/path/to/local/model
LOCAL_LLM_API_URL=http://localhost:8080/v1

# Object Storage Configuration (S3 Compatible)
S3_ENDPOINT_URL=http://localhost:9000  # For MinIO local development
S3_ACCESS_KEY_ID=your-s3-access-key
S3_SECRET_ACCESS_KEY=your-s3-secret-key
S3_BUCKET_NAME=bacopilot-storage
S3_REGION=us-east-1

# Vector Database Configuration
VECTOR_DB_TYPE=pinecone  # Options: pinecone, weaviate, chroma
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=bacopilot-vectors

WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your-weaviate-api-key

# Message Queue Configuration
MESSAGE_QUEUE_TYPE=rabbitmq  # Options: rabbitmq, kafka
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Application Configuration
ENVIRONMENT=development  # Options: development, staging, production
DEBUG=true
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=v1

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8001
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# External Service URLs
FIGMA_API_TOKEN=your-figma-api-token
SKETCH_API_TOKEN=your-sketch-api-token

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_ADDRESS=noreply@bacopilot.com

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key
WEBHOOK_TIMEOUT_SECONDS=30

# File Upload Configuration
MAX_UPLOAD_SIZE_MB=50
ALLOWED_FILE_TYPES=md,txt,pdf,docx
UPLOAD_TIMEOUT_SECONDS=300

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_ANALYTICS=true
ENABLE_WEBHOOKS=true
ENABLE_RATE_LIMITING=true

# Development Configuration
DEV_RELOAD=true
DEV_DEBUG_SQL=false
DEV_MOCK_LLM_RESPONSES=false
DEV_SKIP_AUTH=false