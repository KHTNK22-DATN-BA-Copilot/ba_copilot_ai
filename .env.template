# Environment variables template for BA Copilot AI Services
# Copy this file to .env and fill in your values

# Basic app settings
APP_NAME="BA Copilot AI Services"
ENVIRONMENT=development
DEBUG=true

# Server settings
HOST=0.0.0.0
PORT=8000

# CORS settings (comma-separated)
ALLOWED_ORIGINS="*"

# Mock data settings
MOCK_DATA_ENABLED=true

# Logging
LOG_LEVEL=DEBUG

# Database connection (overridden by compose, but useful defaults for docker network)
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/bacopilot_db

# Redis settings (optional)
REDIS_URL=redis://redis:6379/0

# API Keys - At least one is required for LLM services
# Google AI (Gemini) API Key - Get from: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# OpenAI API Key - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic Claude API Key - Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenRouter API Key (Alternative) - Get from: https://openrouter.ai/keys
OPENROUTER_AI_API_KEY=your-openrouter-api-key-here
OPENROUTER_REFERER=http://localhost
OPENROUTER_TITLE=BA Copilot AI (Local)

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production