
# OpenRouter API Configuration
OPEN_ROUTER_API_KEY=your_openrouter_api_key_here

# Database Configuration (if needed)
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=ba_copilot
DATABASE_URL=postgresql://user:password@db:5432/ba_copilot

# Application Settings
ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Mermaid Validation Subprocess
# Enable/disable validation (set to 'false' to disable)
MERMAID_VALIDATOR_ENABLED=true
# Validator subprocess network configuration
MERMAID_VALIDATOR_PORT=51234
MERMAID_VALIDATOR_HOST=localhost
# Timeout settings (seconds)
MERMAID_VALIDATOR_STARTUP_TIMEOUT=30      
MERMAID_VALIDATOR_REQUEST_TIMEOUT=10      
MERMAID_VALIDATOR_SHUTDOWN_TIMEOUT=5      
# Health monitoring
MERMAID_VALIDATOR_HEALTH_CHECK_INTERVAL=30    
MERMAID_VALIDATOR_MAX_CONSECUTIVE_FAILURES=3  
# Retry logic
MERMAID_VALIDATOR_MAX_RETRIES=3           
MERMAID_VALIDATOR_RETRY_DELAY=2          
# Performance limits
MERMAID_VALIDATOR_MAX_MEMORY_MB=500       
MERMAID_VALIDATOR_MAX_CPU_PERCENT=50.0   